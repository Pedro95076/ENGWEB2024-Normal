extends layout
block content
    w3.card-4 
        header.w3-container.w3-teal 
            h1 Detalhes do Contrato
        .w3-container
            table.w3-table-all
                tr
                    th ID Contrato
                    th Objeto do Contrato
                    th Data de Celebração do Contrato
                    th Preço Contratual
                    th NIPC da Entidade Comunicante
                    th Entidade Comunicante

                tr
                    td= contrato.idcontrato
                    td= contrato.objectoContrato
                    td= contrato.dataCelebracaoContrato
                    td= contrato.precoContratual
                    td
                        a(href=`/entidades/${contrato.NIPC_entidade_comunicante}`)= contrato.NIPC_entidade_comunicante
                    td= contrato.entidade_comunicante

        footer.w3-container.w3-teal
            a(href="/") Voltar à página principal
            h5 Generated by Pedro Oliveira::EngWeb2024 in #{d}
